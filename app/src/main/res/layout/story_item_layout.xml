<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">
    <TextView
            android:id="@+id/story_item_question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/text_17_ff000000_bold"
            android:text="How are you?"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView
                android:id="@+id/story_item_avatar_iv"
                android:layout_width="18dp" android:layout_height="18dp"
                android:src="@drawable/ic_launcher"
                />
        <TextView
                android:id="@+id/story_item_author_tv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/text_15_ff000000_bold"
                android:text="author"
                />
        <TextView
                android:id="@+id/story_item_bio_tv"
                android:text="bio"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="@style/text_14_9e000000"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:id="@+id/story_item_answer_tv"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="I am fine!"
            android:textAppearance="@style/text_17_d9000000"
            />
    <Button
            android:id="@+id/story_item_viewmore_btn"
            android:background="@drawable/view_more_selector"
            android:layout_width="match_parent" android:layout_height="30dp"
            android:text="查看知乎讨论"/>
</LinearLayout>