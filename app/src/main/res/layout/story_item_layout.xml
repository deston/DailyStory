<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">
    <TextView
            android:id="@+id/story_item_question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/text_18_ff000000"
            android:text="How are you?"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView
                android:id="@+id/story_item_head_iv"
                android:layout_width="18dp" android:layout_height="18dp"
                android:src="@drawable/ic_launcher"
                />
        <TextView
                android:id="@+id/story_item_name_tv"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/text_16_ff000000"
                android:text="name"
                />
        <TextView
                android:id="@+id/story_item_remark_tv"
                android:text="remark"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/text_14_9e000000"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
            android:id="@+id/story_item_answer_tv"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="I am fine!"
            android:textAppearance="@style/text_17_d9000000"
            />
</LinearLayout>