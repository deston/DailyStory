<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/home_item_selector"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/home_item_title"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="aaaa"
            android:layout_toLeftOf="@+id/home_item_image"
            android:layout_alignTop="@+id/home_item_image"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    <ImageView
            android:id="@+id/home_item_image"
            android:layout_width="80dp" android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
</RelativeLayout>